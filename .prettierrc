{
	"useTabs": true,
	"singleQuote": false,
	"trailingComma": "all",
	"printWidth": 70,
	"overrides": [
		{
			"files": "*.svelte",
			"options": {
				"parser": "svelte"
			}
		}
	],
	"plugins": [
		"prettier-plugin-tailwindcss",
		"prettier-plugin-svelte"
	],
	"bracketSpacing": true,
	"bracketSameLine": false,
	"htmlWhitespaceSensitivity": "ignore",
	"singleAttributePerLine": true
}
